<Window x:Class="KNX_Virtual_Integrator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <!-- Conteneur principal -->
    <Grid>
        <!-- Définition des lignes du Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Premier bouton dans la première ligne -->
        <Button x:Name="ButtonChargerProject"
                Grid.Row="0"
                Margin="10"
                Click="ImportProjectButtonClick"
                Content="Charger Projet" />
        
        <!-- Deuxième bouton dans la deuxième ligne -->
        <Button x:Name="ButtonChargerGroupAddressesXml"
                Grid.Row="1"
                Margin="10"
                Click="ImportGroupAddressFileButtonClick"
                Content="Charger Fichier Xml" />
    </Grid>
</Window>
