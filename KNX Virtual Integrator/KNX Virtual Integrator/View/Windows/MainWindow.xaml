<Window x:Class="KNX_Virtual_Integrator.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Closing="ClosingMainWindow">

    <!-- Conteneur principal -->
    <Grid>
        <!-- Define rows for buttons and content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Buttons at the top -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" >

            <!-- Bouton Connexion -->
            <Button Style="{StaticResource IconButtonStyle}"
                    Tag="{StaticResource DisconnectedDrawingImage}"
                    Margin="5,5,5,5"
            />

            <!-- Premier bouton Importation -->
            <Button Style="{StaticResource IconButtonStyle}"
                    Tag="{StaticResource ImportedDrawingImage}" 
                    Click="Button_Click_1"
            />

            <!-- Deuxième bouton Importation -->
            <Button Content="{StaticResource ImportButton}"
                    Style="{StaticResource IconTextButtonStyle}"
                    Tag="{StaticResource ImportedDrawingImage}"
                    Background="{StaticResource AccentuateBlue}"
            />

            <!-- Bouton Paramètres -->
            <Button Style="{StaticResource IconButtonStyle}"
                    Tag="{StaticResource settingsDrawingImage}"
                    Background="{StaticResource BackgroundWhite}"
                    BorderBrush="{StaticResource BorderGray}"
                    BorderThickness="1"
            />
        </StackPanel>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">

            <!-- Bouton de Test -->
            <Button Content="{StaticResource TestButton}"
                    Style="{StaticResource IconTextButtonStyle}"
                    Tag="{StaticResource playDrawingImage}"
                    ToolTip="5"
            />
            <!-- Bouton d'Exportation -->
            <Button Content="{StaticResource ExportButton}"
                    Style="{StaticResource IconTextButtonStyle}"
                    Tag="{StaticResource ExportedDrawingImage}"
            />
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="{StaticResource BorderGray}" BorderThickness="1" Margin="10,0,10,10">
            <Grid>
            <!-- Define rows and columns for the nested grid -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Row for nested top content -->
                <RowDefinition Height="*" />
                <!-- Row for nested main content -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Column for nested section 1 -->
                <ColumnDefinition Width="*" />
                <!-- Column for nested expandable section -->
                <ColumnDefinition Width="Auto" />
                <!-- Column for nested section 2 -->
                <ColumnDefinition Width="*" />
                <!-- Column for nested section 2 -->
                <ColumnDefinition Width="*" />
                <!-- Column for nested section 2 -->
            </Grid.ColumnDefinitions>

        <!-- Première colonne -->
                <!-- En-tête -->
                <Grid Grid.Row="0" Grid.Column="0" Background="{StaticResource BackgroundLightGray}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Column for title -->
                        <ColumnDefinition Width="*" />
                        <!-- Column for button -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource TitleTextStyle}"
                               Text="{StaticResource ModelsTitle}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                     />

                    <Button Grid.Column="1"
                            Style="{StaticResource IconButtonStyle}"
                            Tag="{StaticResource SearchDrawingImage}"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="1"
                            HorizontalAlignment="Right"
                            Margin="0"
                     />
                </Grid>

                <ListBox Grid.Row="1" Grid.Column="0">
                    <ListBoxItem Content="Item 1" />
                    <ListBoxItem Content="Item 2" />
                    <ListBoxItem Content="Item 3" />
                </ListBox>

        <!-- Deuxième colonne -->
                <!-- En-tête -->
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Column for title -->
                        <ColumnDefinition Width="*" />
                        <!-- Column for button -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource TitleTextStyle}"
                               Text="{StaticResource ModelsParametersTitle}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                     />

                    <Button Grid.Column="1"
                            Style="{StaticResource IconButtonStyle}"
                            Tag="{StaticResource CloseDrawingImage}"
                            Background="Transparent"
                            HorizontalAlignment="Right"
                            Margin="0"
                    />
                </Grid>

                <Grid  Margin="10" Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Nom :" VerticalAlignment="Center" Grid.Row="0"/>
                    <TextBox x:Name="NomTextBox" Width="200" Grid.Row="0" Margin="80,0,0,0"/>

                    <TextBlock Text="DPT envoyé :" VerticalAlignment="Center" Grid.Row="1" Margin="0,10,0,0"/>
                    <ComboBox x:Name="DptSortieComboBox" Width="200" Grid.Row="1" Margin="80,10,0,0">
                        <ComboBoxItem Content="1 bit" />
                        <ComboBoxItem Content="2 bits" />
                        <ComboBoxItem Content="4 bits" />
                        <!-- Ajoutez d'autres options ici si nécessaire -->
                    </ComboBox>

                    <CheckBox x:Name="ParametresAvancesCheckBox" Foreground="White" 
                              Content="Paramètres Avancés" Grid.Row="2" Margin="0,10,0,0"/>

                    <TextBlock Text="DPT de retour :" VerticalAlignment="Center" Grid.Row="3" Margin="0,10,0,0"/>
                    <ComboBox x:Name="DptRetourComboBox" Width="200" Grid.Row="3" Margin="80,10,0,0">
                        <ComboBoxItem Content="8 bit" />
                        <ComboBoxItem Content="16 bits" />
                        <!-- Ajoutez d'autres options ici si nécessaire -->
                    </ComboBox>

                    <StackPanel Grid.Row="4" Margin="0,10,0,0">
                        <TextBlock Text="Valeur Envoyé / Valeur Attendue :" />

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBox x:Name="ValeurEnvoye1TextBox" Width="50" />
                            <TextBox x:Name="ValeurAttendue1TextBox" Width="50" Margin="10,0,0,0" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBox x:Name="ValeurEnvoye2TextBox" Width="50" />
                            <TextBox x:Name="ValeurAttendue2TextBox" Width="50" Margin="10,0,0,0" />
                        </StackPanel>

                        <Button Content="+" Width="30" Height="30" Margin="0,5,0,0"/>
                        <Button Content="-" Width="30" Height="30" Margin="40,5,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Row="5">
                        <Button Content="Filtrer" Width="75" Margin="0,0,10,0"/>
                        <Button Content="Enregistrer" Width="75"/>
                    </StackPanel>
                </Grid>

                <!-- Second GridSplitter -->
                <GridSplitter Grid.Column="2" Grid.RowSpan="2" HorizontalAlignment="Center" Width="5" Background="{StaticResource BorderGray}" />

                
 <!-- Troisième colonne -->
                <!-- En-tête -->
                <Grid Grid.Row="0" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Column for title -->
                        <ColumnDefinition Width="*" />
                        <!-- Column for button -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource TitleTextStyle}"
                               Text="{StaticResource CommandeParametersTitle}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                     />

                    <Button Grid.Column="1"
                            Style="{StaticResource IconButtonStyle}"
                            Tag="{StaticResource CloseDrawingImage}"
                            Background="Transparent"
                            HorizontalAlignment="Right"
                            Margin="0"
                    />
                </Grid>

                <TextBlock Grid.Row="1" Grid.Column="3" Text="ICI LES PARAMETRES DE LA COMMANDE QUAND ON CLIQUE SUR UNE ADRESSE ?" 
TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" />

                <!-- Quatrième colonne -->
                <!-- En-tête -->
                <Grid Grid.Row="0" Grid.Column="4"  Background="{StaticResource BackgroundLightGray}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Column for title -->
                        <ColumnDefinition Width="*" />
                        <!-- Column for button -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource TitleTextStyle}"
                               Text="{StaticResource GroupAdressesTitle}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                     />

                    <Button Grid.Column="1"
                            Style="{StaticResource IconButtonStyle}"
                            Tag="{StaticResource SearchDrawingImage}"
                            HorizontalAlignment="Right"
                    />
                </Grid>

                <!-- TreeView in the third column -->
                <TreeView Grid.Row="1" Grid.Column="4" >
                    <TreeViewItem Header="Éclairage">
                        <TreeViewItem Header="Marche/Arrêt">
                            <TreeViewItem Header="Cmd_PlanDeTravail_Cuisine" />
                        </TreeViewItem>
                        <TreeViewItem Header="Indication d'état">
                            <TreeViewItem Header="le_PlanDeTravail_Cuisine" />
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeView>

            </Grid>
    </Border>
        
    </Grid>
</Window>

