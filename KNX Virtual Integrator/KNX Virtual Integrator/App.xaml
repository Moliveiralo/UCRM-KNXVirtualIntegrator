<Application x:Class="KNX_Virtual_Integrator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Ajouter le dictionnaire de ressources pour les chaînes de caractères -->
                <ResourceDictionary Source="Resources/Strings.MainWindow.fr.xaml" />

                <!-- Ajouter le dictionnaire de ressources pour les styles -->
                <ResourceDictionary Source="Resources/Styles.xaml" />

                <!-- Ajouter le dictionnaire de ressources pour les icones -->
                <ResourceDictionary Source="Resources/Images.xaml" />
                
                <!-- Ajouter le dictionnaire de ressources pour les couleurs -->
                <ResourceDictionary Source="Resources/Colors.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
         
    </Application.Resources>
</Application>
